PLACE_ID = "8737602449" 
PACKAGE_NAME = "com.roblox.clieng"

# C√°c ƒë∆∞·ªùng d·∫´n t·∫°m
DB_PATH = f"/data/data/{PACKAGE_NAME}/app_webview/Default/Cookies"
TMP_PATH = "/data/local/tmp/Cookies_tmp" # File t·∫°m ƒë·ªÉ s·ª≠a
# ============================================

def run_root(command):
    return subprocess.run(['su', '-c', command], capture_output=True, text=True)

def auto_login_python_way():
    print("üöÄ ƒêang kh·ªüi ƒë·ªông (D√πng Python SQLite n·ªôi b·ªô)...")

    # 1. T·∫Øt Roblox
    run_root(f"am force-stop {PACKAGE_NAME}")

    # 2. Copy file database ra th∆∞ m·ª•c t·∫°m (n∆°i Python c√≥ th·ªÉ s·ª≠a)
    print("üìÇ ƒêang tr√≠ch xu·∫•t d·ªØ li·ªáu ƒëƒÉng nh·∫≠p...")
    res = run_root(f"cp {DB_PATH} {TMP_PATH}")
    run_root(f"chmod 777 {TMP_PATH}") # C·∫•p quy·ªÅn cho file t·∫°m

    if not os.path.exists(TMP_PATH) and res.returncode != 0:
        # N·∫øu cp th·∫•t b·∫°i, c√≥ th·ªÉ do ƒë∆∞·ªùng d·∫´n kh√°c, th·ª≠ ƒë∆∞·ªùng d·∫´n d·ª± ph√≤ng
        DB_PATH_ALT = f"/data/data/{PACKAGE_NAME}/app_webview/Cookies"
        run_root(f"cp {DB_PATH_ALT} {TMP_PATH}")
        run_root(f"chmod 777 {TMP_PATH}")

    # 3. D√πng th∆∞ vi·ªán sqlite3 c·ªßa Python ƒë·ªÉ s·ª≠a file t·∫°m
    try:
        print("üîß ƒêang n·∫°p Cookie b·∫±ng Python...")
        conn = sqlite3.connect(TMP_PATH)
        cursor = conn.cursor()
        
        # X√≥a v√† ch√®n cookie m·ªõi
        cursor.execute("DELETE FROM cookies WHERE host_key = '.roblox.com' AND name = '.ROBLOSECURITY'")
        
        sql = """INSERT INTO cookies 
                 (creation_utc, host_key, name, value, path, expires_utc, is_secure, is_httponly, last_access_utc, has_expires, is_persistent, priority, samesite, source_scheme) 
                 VALUES (?, '.roblox.com', '.ROBLOSECURITY', ?, '/', 253402300799, 1, 1, ?, 1, 1, 1, -1, 2)"""
        
        now = int(time.time())
        cursor.execute(sql, (now, MY_COOKIE, now))
        
        conn.commit()
        conn.close()
        print("‚úÖ ƒê√£ s·ª≠a file database t·∫°m th·ªùi.")

    except Exception as e:
        print(f"‚ùå L·ªói khi s·ª≠a Database: {e}")
        return

    # 4. Copy ng∆∞·ª£c file ƒë√£ s·ª≠a v√†o l·∫°i h·ªá th·ªëng
    print("üì• ƒêang ghi ƒë√® d·ªØ li·ªáu m·ªõi...")
    run_root(f"cp {TMP_PATH} {DB_PATH}")
    run_root(f"chmod 660 {DB_PATH}") # Tr·∫£ l·∫°i quy·ªÅn m·∫∑c ƒë·ªãnh
    run_root(f"chown 10100:10100 {DB_PATH}") # Th∆∞·ªùng l√† UID c·ªßa app, c√≥ th·ªÉ b·ªè qua n·∫øu kh√¥ng r√µ

    # 5. X√≥a file t·∫°m v√† Rejoin
    run_root(f"rm {TMP_PATH}")
    
    print(f"üéÆ ƒêang v√†o game {PLACE_ID}...")
    url = f"roblox://placeID={PLACE_ID}"
    run_root(f"am start -n {PACKAGE_NAME}/com.roblox.client.startup.ActivitySplash -d {url}")
    time.sleep(5)
    run_root(f"am start -n {PACKAGE_NAME}/com.roblox.client.ActivityProtocolLaunch -d {url}")
    
    print("‚ú® Ho√†n t·∫•t!")

if __name__ == "__main__":
    auto_login_python_way()
