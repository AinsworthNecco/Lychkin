# ==============================================================
# ==>> Lá»šP QUáº¢N LÃ CODE STORAGE (LÆ¯U TRá»® & TRÃCH XUáº¤T) <<==
# ==============================================================

class CodeStorageManager:
    def __init__(self, filename):
        self.filename = filename

    def load_data(self):
        """Äá»c file CODE.txt vÃ  tráº£ vá» dict {VIP_TYPE: [code1, code2...]}"""
        data = defaultdict(list)
        current_section = None
        
        if not os.path.exists(self.filename):
            # Náº¿u chÆ°a cÃ³ file thÃ¬ táº¡o file rá»—ng
            try:
                with open(self.filename, 'w', encoding='utf-8') as f:
                    f.write("")
            except: pass
            return data

        try:
            with open(self.filename, 'r', encoding='utf-8') as f:
                lines = f.readlines()
            
            for line in lines:
                line = line.strip()
                if not line: continue
                
                # Kiá»ƒm tra xem dÃ²ng nÃ y cÃ³ pháº£i lÃ  tiÃªu Ä‘á» loáº¡i VIP khÃ´ng (IN HOA)
                is_header = False
                for v in VIP_MAP.keys():
                    if line == v.upper():
                        current_section = line
                        is_header = True
                        break
                
                if is_header:
                    continue
                
                if current_section:
                    data[current_section].append(line)
        except Exception as e:
            print(f"[STORAGE] Lá»—i Ä‘á»c file code: {e}")
            
        return data

    def save_data(self, data):
        """Ghi Ä‘Ã¨ láº¡i file CODE.txt vá»›i dá»¯ liá»‡u má»›i nháº¥t"""
        try:
            with open(self.filename, 'w', encoding='utf-8') as f:
                # Sáº¯p xáº¿p Ä‘á»ƒ ghi theo thá»© tá»± Ä‘áº¹p máº¯t
                sorted_keys = sorted(data.keys())
                for vip_type in sorted_keys:
                    codes = data[vip_type]
                    if not codes: continue
                    
                    f.write(f"{vip_type}\n")
                    for code in codes:
                        f.write(f"{code}\n")
                    f.write("\n") # DÃ²ng trá»‘ng giá»¯a cÃ¡c má»¥c
            return True
        except Exception as e:
            print(f"[STORAGE] Lá»—i ghi file code: {e}")
            return False

    def add_codes(self, new_codes_dict):
        """ThÃªm code má»›i vÃ o kho (Append mode)"""
        data = self.load_data()
        summary = {}
        
        for vip, codes in new_codes_dict.items():
            if not codes: continue
            vip_upper = vip.upper()
            
            # Äáº£m báº£o key tá»“n táº¡i trong dict
            if vip_upper not in data:
                data[vip_upper] = []
            
            # Lá»c trÃ¹ng láº·p: Chá»‰ thÃªm code chÆ°a cÃ³
            existing_set = set(data[vip_upper])
            added_count = 0
            for c in codes:
                c = c.strip()
                if c and c not in existing_set:
                    data[vip_upper].append(c)
                    existing_set.add(c)
                    added_count += 1
            
            summary[vip_upper] = added_count
        
        self.save_data(data)
        return summary

    def pop_codes(self, vip_type, amount):
        """Láº¥y code ra khá»i kho vÃ  xÃ³a chÃºng"""
        data = self.load_data()
        vip_upper = vip_type.upper()
        
        if vip_upper not in data:
            return None, 0
            
        current_list = data[vip_upper]
        if len(current_list) < amount:
            return None, len(current_list)
            
        # Láº¥y code vÃ  cáº­p nháº­t danh sÃ¡ch cÃ²n láº¡i
        codes_to_give = current_list[:amount]
        data[vip_upper] = current_list[amount:]
        
        self.save_data(data)
        return codes_to_give, len(data[vip_upper])

code_storage = CodeStorageManager(CODE_FILE_NAME)

# ==============================================================
# ==>> Lá»šP QUáº¢N LÃ PROXY (CORE - Há»– TRá»¢ TOÃ€N Bá»˜ Äá»ŠNH Dáº NG) <<==
# ==============================================================

class ProxyManager:
    def __init__(self, filepath):
        self.proxies = []
        self.bad_proxies = set()
        self.load_proxies(filepath)
    
    def parse_proxy(self, line):
        """
        HÃ m xá»­ lÃ½ thÃ´ng minh má»i Ä‘á»‹nh dáº¡ng Proxy:
        1. host:port
        2. host:port:user:pass
        3. user:pass@host:port
        4. http://host:port...
        """
        line = line.strip()
        if not line or line.startswith('#'): return None

        # XÃ³a tiá»n tá»‘ http:// hoáº·c https:// náº¿u cÃ³
        line = re.sub(r'^https?://', '', line)

        try:
            # TrÆ°á»ng há»£p: user:pass@host:port
            if '@' in line:
                return f"http://{line}"

            parts = line.split(':')
            
            # TrÆ°á»ng há»£p: host:port
            if len(parts) == 2:
                host, port = parts
                return f"http://{host}:{port}"
            
            # TrÆ°á»ng há»£p: host:port:user:pass
            if len(parts) == 4:
                host, port, user, pwd = parts
                return f"http://{user}:{pwd}@{host}:{port}"
            
            # TrÆ°á»ng há»£p khÃ¡c (vÃ­ dá»¥ host:port:extra...)
            return f"http://{line}"
        except Exception:
            return None

    def load_proxies(self, filepath):
        script_dir = os.path.dirname(os.path.abspath(__file__))
        full_path = os.path.join(script_dir, filepath)
        try:
            with open(full_path, 'r', encoding='utf-8') as f:
                for line in f:
                    p = self.parse_proxy(line)
                    if p: self.proxies.append(p)
            print(f"[PROXY] ÄÃ£ táº£i {len(self.proxies)} proxy vá»›i kháº£ nÄƒng nháº­n diá»‡n Ä‘a Ä‘á»‹nh dáº¡ng.")
        except FileNotFoundError:
            print(f"[PROXY] KhÃ´ng tÃ¬m tháº¥y file {filepath}. Vui lÃ²ng táº¡o file nÃ y.")

    def get_live_proxy(self):
        available = [p for p in self.proxies if p not in self.bad_proxies]
        if not available: return None
        return random.choice(available)

    def mark_bad(self, proxy):
        if proxy and proxy not in self.bad_proxies:
            self.bad_proxies.add(proxy)
            remaining = len(self.proxies) - len(self.bad_proxies)
            # print(f"[PROXY] Loáº¡i bá» proxy lá»—i. CÃ²n láº¡i: {remaining}") # Comment bá»›t spam log

    def reset_bad_proxies(self):
        self.bad_proxies.clear()
        print(f"[PROXY] ÄÃ£ RESET toÃ n bá»™ danh sÃ¡ch proxy lá»—i. Hiá»‡n cÃ³ {len(self.proxies)} proxy sáºµn sÃ ng.")

    def get_count(self): return len(self.proxies)
    def get_live_count(self): return len(self.proxies) - len(self.bad_proxies)

proxy_manager = ProxyManager(PROXY_FILE_NAME)

# ==============================================================
# ==>> HÃ€M Há»– TRá»¢ REQUEST (AN TOÃ€N) <<==
# ==============================================================

def safe_request(method, url, proxy, **kwargs):
    proxies_dict = {"http": proxy, "https": proxy} if proxy else None
    if 'timeout' not in kwargs: kwargs['timeout'] = 20
    try:
        if method.lower() == 'get':
            resp = requests.get(url, proxies=proxies_dict, **kwargs)
        else:
            resp = requests.post(url, proxies=proxies_dict, **kwargs)
        
        if resp and "certain foreign ip addresses have been restricted" in resp.text.lower():
            raise requests.exceptions.ConnectionError("IP Restricted by VMOS")
        return resp
    except Exception as e:
        raise e

