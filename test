def exchange_target_gem(token, userid, proxy, target_id):
    url = "https://api.vsphone.com/vsphone/api/vcActiveExchangeGood/gemExchange"
    headers = {
        "token": token, "userid": str(userid), "Content-Type": "application/json",
        "origin": "https://cloud.vsphone.com", "referer": "https://cloud.vsphone.com/",
        "User-Agent": USER_AGENT, "appversion": "2003004", "clienttype": "web",
        "requestsource": "wechat-miniapp", "suppliertype": "0"
    }
    
    payload = {"id": target_id}
    print(f"\n[EXCHANGE] ğŸ Báº¯t Ä‘áº§u mua gÃ³i ID {target_id} cho UserID: {userid}")
    
    for attempt in range(5): 
        try:
            resp = safe_request("POST", url, proxy, headers=headers, json=payload)
            if resp and resp.status_code == 200:
                data = resp.json()
                if data.get("code") == 200:
                    print(f"[EXCHANGE] âœ… Äá»•i thÃ nh cÃ´ng gÃ³i ID {target_id}")
                    return True
                else:
                    print(f"[EXCHANGE] âš ï¸ Lá»—i Ä‘á»•i gÃ³i {target_id}: {data.get('msg')} (MÃ£ lá»—i: {data.get('code')})")
            else:
                print(f"[EXCHANGE] âš ï¸ HTTP Lá»—i {resp.status_code if resp else 'None'}")
        except Exception as e:
            print(f"[EXCHANGE] âŒ Lá»—i Exception: {e}")
        time.sleep(2)
    return False

def fetch_codes_as_dict(token, userid, proxy):
    """
    HÃ m nÃ y thay tháº¿ hÃ m fetch_and_send_codes cÅ©.
    Thay vÃ¬ gá»­i Webhook, nÃ³ tráº£ vá» dictionary Ä‘á»ƒ lÆ°u vÃ o file.
    """
    url = "https://api.vsphone.com/vsphone/api/vcActiveAssetsExchangeLog/list"
    headers = {
        "accept": "application/json, text/plain, */*", "appversion": "2003004",
        "clienttype": "web", "content-type": "application/json",
        "origin": "https://cloud.vsphone.com", "referer": "https://cloud.vsphone.com/",
        "requestsource": "wechat-miniapp", "suppliertype": "0",
        "token": token, "userid": str(userid), "user-agent": USER_AGENT
    }
    
    print(f"\n[GET-CODE] ğŸŒ Äang láº¥y danh sÃ¡ch code Ä‘á»ƒ lÆ°u trá»¯...")
    try:
        resp = safe_request("GET", url, proxy, headers=headers)
        if not resp or resp.status_code != 200:
            print(f"[GET-CODE] âŒ Lá»—i API quÃ©t code: HTTP {resp.status_code if resp else 'None'}")
            return None
            
        data = resp.json()
        if data.get("code") != 200:
            print(f"[GET-CODE] âŒ Server bÃ¡o lá»—i khi quÃ©t: {data}")
            return None
            
        items = data.get("data", [])
        if not items:
            print("[GET-CODE] âš ï¸ KhÃ´ng cÃ³ code nÃ o trong danh sÃ¡ch.")
            return None

        grouped = defaultdict(list)
        count = 0
        for item in items:
            if not item.get("isActivation", True): 
                vip_type = item.get("configName", "UNKNOWN")
                code = item.get("awardCount", "")
                if code:
                    grouped[vip_type].append(code)
                    count += 1

        print(f"[GET-CODE] TÃ¬m tháº¥y {count} code.")
        return grouped
    except Exception as e:
        print(f"[GET-CODE] âŒ Lá»—i Exception: {e}")
        return None

def get_invite_code_vmos(token, userid, proxy):
    agent_info_url = "https://api.vsphone.com/vsphone/api/agentUser/agentUserInfo"
    headers = {
        "token": token, "userid": str(userid), "Content-Type": "application/json",
        "origin": "https://cloud.vmoscloud.com", "referer": "https://cloud.vmoscloud.com/",
        "User-Agent": USER_AGENT, "appversion": "1008424", "clienttype": "web"
    }
    print(f"\n[GET-CODE DEBUG] Báº®T Äáº¦U YÃŠU Cáº¦U Láº¤Y MÃƒ Má»œI Tá»ª VMOS")
    
    trigger_agent_activation(token, userid, proxy, headers)

    for attempt in range(3):
        try:
            resp = safe_request("POST", agent_info_url, proxy, headers=headers, json={})
            if not resp or resp.status_code != 200 or resp.json().get("code") != 200:
                resp = safe_request("GET", agent_info_url, proxy, headers=headers)
            
            if resp and resp.status_code == 200:
                data = resp.json()
                if data.get("code") == 200:
                    channel_code = data.get("data", {}).get("channelCode", "")
                    if channel_code:
                        print(f"[GET-CODE DEBUG] => THÃ€NH CÃ”NG! ÄÃ£ láº¥y Ä‘Æ°á»£c mÃ£ má»i: {channel_code}\n")
                        return channel_code
                    else:
                        break 
                elif data.get("code") == 500:
                    time.sleep(3)
                    continue
                else: break
        except Exception as e: break
    return None

# ==============================================================
# ==>> WORKER & DISCORD COMMANDS <<==
# ==============================================================

async def task_worker(invite_code, update_callback=None):
    """
    Worker thá»±c hiá»‡n quy trÃ¬nh: Láº¥y Proxy -> Reg TempMail -> Láº¥y Code -> Login VMOS.
    HÃ m nÃ y cÃ³ thá»ƒ Ä‘Æ°á»£c gá»i Ä‘á»ƒ táº¡o Host (kÃ¨m update_callback) hoáº·c cháº¡y buff (nhiá»u luá»“ng).
    """
    worker_id = f"W-{random.randint(100,999)}" 
    while True:
        proxy = proxy_manager.get_live_proxy()
        if not proxy: return None

        try:
            proxy_short = proxy.split('@')[-1]
            if update_callback: await update_callback(f"ğŸ”„ Äang thá»­ proxy: {proxy_short}...")
            
            email = await asyncio.to_thread(get_temp_email, proxy)
            if not email:
                if update_callback: await update_callback(f"âš ï¸ Lá»—i táº¡o mail, thá»­ láº¡i...")
                continue 

            if update_callback: await update_callback(f"ğŸ“© Äang gá»­i mÃ£ OTP vá» {email}...")
            sent = await asyncio.to_thread(send_code_vmos, email, proxy)
            if not sent:
                proxy_manager.mark_bad(proxy)
                if update_callback: await update_callback(f"âŒ Gá»­i mÃ£ tháº¥t báº¡i. Äá»•i proxy...")
                continue
            
            if update_callback: await update_callback(f"â³ Äang chá» mÃ£ OTP tá»« {email}...")
            code = await asyncio.to_thread(get_code_from_email, email, proxy)
            if not code:
                if update_callback: await update_callback(f"âŒ KhÃ´ng nháº­n Ä‘Æ°á»£c OTP. Thá»­ láº¡i...")
                continue

            if update_callback: await update_callback(f"ğŸ”‘ Äang Ä‘Äƒng nháº­p...")
            creds = await asyncio.to_thread(login_vmos, email, code, proxy, invite_code)
            if not creds:
                if update_callback: await update_callback(f"âŒ ÄÄƒng nháº­p tháº¥t báº¡i. Thá»­ láº¡i...")
                continue

            print(f"[{worker_id}] ğŸ‰ QUÃ TRÃŒNH HOÃ€N Táº¤T CHO EMAIL: {email}")
            return {
                "email": email, "password": "NECONECOLYCONECO", 
                "token": creds['token'], "userId": creds['userId'], "proxy_used": proxy
            }
        except Exception as e:
            proxy_manager.mark_bad(proxy)
            if update_callback: await update_callback(f"ğŸ”¥ Lá»—i ngoáº¡i lá»‡: {str(e)}. Thá»­ láº¡i...")
            continue

def load_token():
    try:
        with open(TOKEN_FILE_NAME, 'r') as f: return f.read().strip()
    except: return None

BOT_TOKEN = load_token()
intents = discord.Intents.default()
intents.message_content = True
bot = commands.Bot(command_prefix='!', intents=intents)

@bot.event
async def on_ready():
    print(f"Logged in as {bot.user}")

@bot.command(name="use")
async def use_code(ctx):
    """
    Lá»‡nh tÆ°Æ¡ng tÃ¡c:
    1. Hiá»‡n Panel tá»“n kho.
    2. Chá» ngÆ°á»i dÃ¹ng nháº­p: <loáº¡i_vip> <sá»‘_lÆ°á»£ng>
    3. Tráº£ code vÃ  xÃ³a khá»i kho.
    """
    data = code_storage.load_data()
    
    # Táº¡o Embed Inventory
    embed = discord.Embed(title="ğŸ“¦ KHO CODE Dá»° TRá»®", color=discord.Color.gold())
    
    total_codes = 0
    if not data:
        embed.description = "Kho Ä‘ang trá»‘ng trÆ¡n! HÃ£y cháº¡y `!genbuff` Ä‘á»ƒ kiáº¿m thÃªm."
    else:
        desc = "Nháº­p lá»‡nh chat bÃªn dÆ°á»›i Ä‘á»ƒ láº¥y code:\n`[loáº¡i_vip] [sá»‘_lÆ°á»£ng]`\nVÃ­ dá»¥: `kvip 5`\n\n**Tá»“n kho hiá»‡n táº¡i:**\n"
        for vip, codes in data.items():
            count = len(codes)
            desc += f"- **{vip}**: {count} codes\n"
            total_codes += count
        embed.description = desc

    if THUMBNAIL_URL: embed.set_thumbnail(url=THUMBNAIL_URL)
    embed.set_footer(text="Bot sáº½ Ä‘á»£i lá»‡nh trong 30 giÃ¢y...")
    
    panel_msg = await ctx.send(embed=embed)

    if total_codes == 0:
        return

    def check(m):
        return m.author == ctx.author and m.channel == ctx.channel

    try:
        msg = await bot.wait_for('message', check=check, timeout=30.0)
        content = msg.content.strip().lower()
        
        # Regex parse: "kvip 5", "svip 1", "vip 10"
        match = re.match(r"^([a-z]+)\s+(\d+)$", content)
        if match:
            vip_req = match.group(1)
            count_req = int(match.group(2))
            
            codes, remaining = code_storage.pop_codes(vip_req, count_req)
            
            if codes is None:
                await ctx.send(f"âŒ KhÃ´ng tÃ¬m tháº¥y loáº¡i VIP `{vip_req.upper()}` trong kho.")
            elif len(codes) < count_req:
                await ctx.send(f"âš ï¸ KhÃ´ng Ä‘á»§ hÃ ng! Kho chá»‰ cÃ²n **{remaining}** code `{vip_req.upper()}`.")
            else:
                # Gá»­i code thÃ nh cÃ´ng
                codes_str = "\n".join(codes)
                await ctx.send(f"âœ… **ÄÃ£ láº¥y {count_req} {vip_req.upper()}** (CÃ²n láº¡i: {remaining}):")
                await ctx.send(f"```\n{codes_str}\n```")
        else:
            await ctx.send("âŒ CÃº phÃ¡p sai. Há»§y lá»‡nh.")
            
    except asyncio.TimeoutError:
        await panel_msg.edit(content="âŒ› Háº¿t thá»i gian chá» lá»‡nh `!use`.", embed=None)

@bot.command(name="genstop")
async def genstop(ctx):
    global is_inf_running
    if is_inf_running:
        is_inf_running = False
        await ctx.send("ğŸ›‘ **ÄÃ£ nháº­n lá»‡nh dá»«ng quÃ¡ trÃ¬nh vÃ´ cá»±c!** Sáº½ ngá»«ng táº¡o Host má»›i sau khi hoÃ n táº¥t phiÃªn hiá»‡n táº¡i.")
    else:
        await ctx.send("âš ï¸ KhÃ´ng cÃ³ tiáº¿n trÃ¬nh vÃ´ cá»±c nÃ o Ä‘ang cháº¡y.")

@bot.command(name="genbuff")
async def genbuff(ctx, arg1: str = None, arg2: str = None):
    global is_inf_running
    
    if not arg1 or not arg2:
        await ctx.send("âŒ CÃº phÃ¡p: `!genbuff <sá»‘_lÆ°á»£ng | inf> <loáº¡i_vip | all | all-vip...>`\nVÃ­ dá»¥: `!genbuff 1 all`, `!genbuff inf all-vip`, `!genbuff 1 all-kvip-vip`")
        return
        
    vip_type = arg2.lower()
    
    # Xá»­ lÃ½ logic cho mode ALL vÃ  Exclusion
    target_vip_types = []
    
    if vip_type == 'all':
        target_vip_types = list(VIP_MAP.keys())
        display_type = "ALL PACKS"
    elif vip_type.startswith('all-'):
        # Mode loáº¡i trá»« (Exclusion)
        parts = vip_type.split('-')
        # parts[0] lÃ  'all', cÃ¡c pháº§n sau lÃ  loáº¡i cáº§n trá»«
        exclusions = parts[1:]
        # Láº¥y táº¥t cáº£ key trá»« Ä‘i nhá»¯ng cÃ¡i cÃ³ trong exclusions
        target_vip_types = [k for k in VIP_MAP.keys() if k not in exclusions]
        
        if not target_vip_types:
             await ctx.send("âŒ Báº¡n Ä‘Ã£ trá»« háº¿t táº¥t cáº£ cÃ¡c gÃ³i! Vui lÃ²ng kiá»ƒm tra láº¡i lá»‡nh.")
             return
             
        display_type = f"ALL (Trá»«: {', '.join([e.upper() for e in exclusions])})"
    elif vip_type in VIP_MAP:
        target_vip_types = [vip_type]
        display_type = vip_type.upper()
    else:
        await ctx.send(f"âŒ Loáº¡i VIP khÃ´ng há»£p lá»‡! HÃ£y dÃ¹ng: `all`, `all-vip`, `all-vip-kvip` hoáº·c {', '.join(VIP_MAP.keys())}")
        return

    # TÃ­nh toÃ¡n tá»•ng target vÃ  danh sÃ¡ch ID cáº§n Ä‘á»•i
    num_buffs = sum(VIP_MAP[t]["target"] for t in target_vip_types)
    exchange_list = [VIP_MAP[t]["exchange_id"] for t in target_vip_types]
    
    display_type += f" ({num_buffs} BUFF)"
    
    is_inf_mode = (arg1.lower() == "inf")
    num_hosts = 0 if is_inf_mode else int(arg1)
    
    if is_inf_mode:
        is_inf_running = True
        print(f"\n[GENBUFF] Báº®T Äáº¦U CHáº¾ Äá»˜ VÃ” Cá»°C (INF) - TYPE: {display_type}")
    else:
        print(f"\n[GENBUFF] Báº®T Äáº¦U CHáº¾ Äá»˜ GIá»šI Háº N - {num_hosts} HOST - TYPE: {display_type}")

    host_idx = 1
    
    while True:
        if is_inf_mode and not is_inf_running:
            print("[GENBUFF] ÄÃ£ dá»«ng vÃ²ng láº·p vÃ´ cá»±c theo lá»‡nh !genstop.")
            break
            
        if not is_inf_mode and host_idx > num_hosts:
            break 

        # --------------------------------------------------------
        # KIá»‚M TRA PROXY TRÆ¯á»šC KHI Táº O HOST
        # --------------------------------------------------------
        if proxy_manager.get_live_count() == 0:
            if is_inf_mode:
                msg_err = await ctx.send("âš ï¸ **Cáº¡n kiá»‡t Proxy!** Há»‡ thá»‘ng sáº½ nghá»‰ 5 phÃºt, sau Ä‘Ã³ tá»± Ä‘á»™ng reset Proxy vÃ  cháº¡y tiáº¿p...")
                print("[GENBUFF] Háº¿t proxy á»Ÿ cháº¿ Ä‘á»™ INF. Ngá»§ 5 phÃºt...")
                await asyncio.sleep(300)
                proxy_manager.reset_bad_proxies()
                await msg_err.delete()
            else:
                await ctx.send(f"âŒ **ToÃ n bá»™ Proxy Ä‘Ã£ bá»‹ Ä‘Ã¡nh dáº¥u lÃ  lá»—i!** Ngá»«ng tiáº¿n trÃ¬nh táº¡i Host {host_idx}/{num_hosts}.")
                print("[GENBUFF] Háº¿t proxy á»Ÿ cháº¿ Ä‘á»™ GIá»šI Háº N. Dá»«ng hoÃ n toÃ n.")
                break

        print(f"\n[GENBUFF] ---> ÄANG Xá»¬ LÃ HOST {host_idx} <---")
        title_text = f"âš™ï¸ Äang táº¡o tÃ i khoáº£n chá»§ ({'VÃ´ cá»±c' if is_inf_mode else f'{host_idx}/{num_hosts}'})..."
        init_embed = discord.Embed(title=title_text, color=discord.Color.orange())
        # Khá»Ÿi táº¡o mÃ´ táº£ Ä‘á»ƒ ngÆ°á»i dÃ¹ng biáº¿t bot Ä‘ang lÃ m gÃ¬ (Fix lá»—i nhÃ¬n nhÆ° bá»‹ treo)
        init_embed.description = "ğŸ”„ Äang khá»Ÿi táº¡o worker..."
        msg = await ctx.send(embed=init_embed)

        # Äá»‹nh nghÄ©a callback Ä‘á»ƒ update status khi táº¡o host
        async def update_host_status(status_msg):
            init_embed.description = status_msg
            try:
                await msg.edit(embed=init_embed)
            except: pass

        # Gá»i worker Ä‘á»ƒ táº¡o host (Truyá»n callback vÃ o Ä‘á»ƒ bot khÃ´ng bá»‹ im láº·ng)
        host_acc = await task_worker(invite_code=None, update_callback=update_host_status)
        
        if not host_acc:
            await msg.edit(content=f"âŒ KhÃ´ng thá»ƒ táº¡o tÃ i khoáº£n chá»§ {host_idx}. Thá»­ láº¡i host tiáº¿p theo...", embed=None)
            host_idx += 1
            continue
        
        host_token = host_acc['token']
        host_userid = host_acc['userId']
        host_proxy = host_acc['proxy_used']
        
        init_embed.description = "ğŸ”„ Äang láº¥y mÃ£ má»i (Invite Code)..."
        await msg.edit(embed=init_embed)
        
        invite_code = await asyncio.to_thread(get_invite_code_vmos, host_token, host_userid, host_proxy)
        
        if not invite_code:
            embed_err = discord.Embed(title=f"âš ï¸ Lá»—i láº¥y mÃ£ má»i (Host {host_idx})", description=f"Email: {host_acc['email']}\nPass: {host_acc['password']}", color=discord.Color.red())
            await msg.edit(embed=embed_err)
            host_idx += 1
            continue

        embed_run = discord.Embed(title=f"ğŸš€ Auto-Buff {display_type} Started", color=discord.Color.blue())
        embed_run.add_field(name="ğŸ‘¤ TÃ i Khoáº£n Chá»§", value=f"Email: `{host_acc['email']}`\nPass: `{host_acc['password']}`", inline=False)
        full_invite_link = f"https://cloud.vsphone.com/event/202602?channel={invite_code}"
        embed_run.add_field(name="ğŸŸï¸ Link Má»i", value=f"{full_invite_link}\n(MÃ£: `{invite_code}`)", inline=False)
        embed_run.add_field(name="ğŸ“Š Tiáº¿n Ä‘á»™ Buff", value=f"Äang chuáº©n bá»‹ {num_buffs} luá»“ng...", inline=False)
        if THUMBNAIL_URL: embed_run.set_thumbnail(url=THUMBNAIL_URL)
        await msg.edit(embed=embed_run)

        total_proxies = proxy_manager.get_count()
        # Chá»‰nh sá»­a: TÄƒng luá»“ng tá»‘i Ä‘a lÃªn 120 theo yÃªu cáº§u
        concurrency = min(total_proxies, 120)
        semaphore = asyncio.Semaphore(concurrency)
        
        current_assets_num = 0
        total_success_local = 0
        total_fail = 0
        
        async def protected_worker():
            async with semaphore:
                return await task_worker(invite_code=invite_code)

        active_tasks = set()
        for _ in range(concurrency):
            active_tasks.add(asyncio.create_task(protected_worker()))
            
        last_update_time = 0
        is_host_failed = False
        
        while active_tasks:
            done, active_tasks = await asyncio.wait(active_tasks, return_when=asyncio.FIRST_COMPLETED)
            
            for task in done:
                try:
                    res = await task
                    if res:
                        total_success_local += 1
                        current_assets_num = await asyncio.to_thread(check_buff_status, host_token, host_userid, host_proxy)
                    else:
                        total_fail += 1
                except Exception as e:
                    total_fail += 1
                
                now = time.time()
                if now - last_update_time > 5 or current_assets_num >= num_buffs or not active_tasks:
                    status_text = f"Má»¥c tiÃªu: **{num_buffs} ({display_type})**\nÄÃ£ nháº­n trÃªn Server: **{current_assets_num}/{num_buffs}**\nThÃ nh cÃ´ng (Local): **{total_success_local}** | Lá»—i: **{total_fail}**"
                    embed_run.set_field_at(2, name="ğŸ“Š Tiáº¿n Ä‘á»™ Buff", value=status_text, inline=False)
                    try: 
                        await msg.edit(embed=embed_run)
                        last_update_time = now
                    except: pass
                
                if current_assets_num >= num_buffs:
                    for t in active_tasks: t.cancel()
                    active_tasks.clear()
                    break
                
                if proxy_manager.get_live_count() > 0:
                    desired_running = min(concurrency, num_buffs - current_assets_num)
                    while len(active_tasks) < desired_running:
                        active_tasks.add(asyncio.create_task(protected_worker()))
                else:
                    if not active_tasks:
                        if is_inf_mode:
                            embed_run.set_field_at(2, name="ğŸ“Š Tiáº¿n Ä‘á»™ Buff", value=f"â³ **Háº¿t Proxy Sá»‘ng!** Chá» 5 phÃºt Ä‘á»ƒ reset...", inline=False)
                            await msg.edit(embed=embed_run)
                            print("[GENBUFF] Háº¿t proxy trong lÃºc cháº¡y luá»“ng (INF). Ngá»§ 5 phÃºt...")
                            await asyncio.sleep(300)
                            proxy_manager.reset_bad_proxies()
                            desired_running = min(concurrency, num_buffs - current_assets_num)
                            for _ in range(desired_running):
                                active_tasks.add(asyncio.create_task(protected_worker()))
                        else:
                            embed_run.set_field_at(2, name="ğŸ“Š Tiáº¿n Ä‘á»™ Buff", value=f"âŒ **ToÃ n bá»™ proxy Ä‘Ã£ há»ng!** (Dá»«ng á»Ÿ {current_assets_num}/{num_buffs})", inline=False)
                            await msg.edit(embed=embed_run)
                            is_host_failed = True
                            for t in active_tasks: t.cancel()
                            active_tasks.clear()
                            break

        if is_host_failed:
            print("[GENBUFF] ThoÃ¡t hoÃ n toÃ n do háº¿t proxy á»Ÿ cháº¿ Ä‘á»™ cÃ³ giá»›i háº¡n.")
            break

        if current_assets_num >= num_buffs:
            # Há»— trá»£ Ä‘á»•i nhiá»u item náº¿u lÃ  ALL mode (Ä‘Ã£ tÃ­nh toÃ¡n exchange_list á»Ÿ trÃªn)
            embed_run.add_field(name="ğŸ Äá»•i Code", value=f"â³ Äang tá»± Ä‘á»™ng Ä‘á»•i {len(exchange_list)} gÃ³i quÃ  vÃ  láº¥y Code...", inline=False)
            await msg.edit(embed=embed_run)
            
            # Cháº¡y loop Ä‘á»•i táº¥t cáº£ ID trong danh sÃ¡ch
            for ex_id in exchange_list:
                await asyncio.to_thread(exchange_target_gem, host_token, host_userid, host_proxy, ex_id)
            
            # Láº¥y Dictionary Code
            codes_dict = await asyncio.to_thread(fetch_codes_as_dict, host_token, host_userid, host_proxy)
            
            # LÆ°u vÃ o Storage
            if codes_dict:
                summary = await asyncio.to_thread(code_storage.add_codes, codes_dict)
                sum_text = ", ".join([f"{k}: +{v}" for k, v in summary.items()])
                embed_run.set_field_at(3, name="âœ… Káº¾T QUáº¢", value=f"ÄÃ£ lÆ°u vÃ o kho (`CODE.txt`):\n**{sum_text}**\nDÃ¹ng lá»‡nh `!use` Ä‘á»ƒ láº¥y code.", inline=False)
            else:
                embed_run.set_field_at(3, name="âš ï¸ Cáº¢NH BÃO", value="Äá»•i quÃ  xong nhÆ°ng khÃ´ng tháº¥y code tráº£ vá»! Kiá»ƒm tra logs.", inline=False)

        embed_run.color = discord.Color.green()
        embed_run.title = f"âœ… HoÃ n Táº¥t Host ({'VÃ´ cá»±c' if is_inf_mode else f'{host_idx}/{num_hosts}'})"
        await msg.edit(embed=embed_run)

        # Chá»‰nh sá»­a: Ping ngÆ°á»i dÃ¹ng khi hoÃ n táº¥t
        await ctx.send(f"{ctx.author.mention} âœ… ÄÃ£ xong Host {host_idx}!")
        
        host_idx += 1

    is_inf_running = False
    print("\n" + "#"*60)
    print(f"[GENBUFF] ÄÃƒ HOÃ€N Táº¤T TOÃ€N Bá»˜ TIáº¾N TRÃŒNH!")
    print("#"*60 + "\n")

if __name__ == "__main__":
    if not BOT_TOKEN: print("âŒ Lá»—i: Thiáº¿u token.txt")
    else:
        print("ğŸš€ Bot Pro Ultimate Ä‘ang cháº¡y...")
        bot.run(BOT_TOKEN)
